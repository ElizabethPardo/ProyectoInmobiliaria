@model IEnumerable<Inmobiliaria.Models.Contrato>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Contratos";

}
<h2>
CONTRATOS DE ALQUILER
</h2>



<p>
    <a asp-action="Create" class="btn btn-dark">Crear nuevo <i class="fas fa-plus"> </i></a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDesde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inmueble.Direccion)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDesde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaHasta)
            </td>
            <td>
                @(item.Inquilino.Nombre + " " + item.Inquilino.Apellido)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Inmueble.Direccion)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdContrato" title="Editar"><i class="fas fa-edit"></i></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.IdContrato" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                <a asp-action="PorContrato" asp-controller="Pago" asp-route-id="@item.IdContrato" title="Pago"><i class="fas fa-money-check-alt"></i></a>

            </td>
        </tr>
        }
    </tbody>
</table>
