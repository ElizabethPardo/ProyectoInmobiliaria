@model IEnumerable<Inmobiliaria.Models.Contrato>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Contratos";

}
<h2>
    CONTRATOS DE ALQUILER
</h2>

<table>
    <tr>
        <th>
            <div class="form-group">
                <label name="FechaIngreso" class="control-label"></label>
                <input type="date" name="FechaIngreso" class="form-control" />
                <span name="FechaIngreso" class="text-danger"></span>
            </div>
        </th>
        <th>
            <div class="form-group">
                <label name="FechaSalida" class="control-label"></label>
                <input type="date" name="FechaSalida" class="form-control" />
                <span name="FechaSalida" class="text-danger"></span>
            </div>

        </th>
        <th>
            <a asp-action="BuscarInmueblesPorFecha" title="Inmuebles disponibles" class="btn btn-dark" style="margin-top:7px;" >Inmuebles disponibles</a>
        <th>
    </tr>
    <tr>
        <th>
            <a asp-action="Create" class="btn btn-dark" style="width:180px;">Crear nuevo<i class="fas fa-plus"></i></a>
        </th>
        <th>
            <a asp-action="BuscarVigentes" title="Vigentes" class="btn btn-dark" style="width:180px;">Contratos Vigentes</a>
        </th>
    <tr>
</table>

<br>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDesde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inmueble.Direccion)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdContrato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDesde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaHasta)
                </td>
                <td>
                    @(item.Inquilino.Nombre + " " + item.Inquilino.Apellido)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Inmueble.Direccion)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdContrato" title="Editar"><i class="fas fa-edit"></i></a>&nbsp;
                    @if (ViewContext.HttpContext.User.IsInRole("Administrador"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.IdContrato" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                    }
                    &nbsp;<a asp-action="PorContrato" asp-controller="Pago" asp-route-id="@item.IdContrato" title="Pago"><i class="fas fa-money-check-alt"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
