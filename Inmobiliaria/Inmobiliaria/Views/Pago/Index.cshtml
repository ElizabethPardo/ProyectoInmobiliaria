@model IEnumerable<Inmobiliaria.Models.Pago>

@{ ViewData["Title"] = "Index"; }

<h2>REGISTRO DE PAGOS</h2>

<p>
    <a asp-action="Create" class="btn btn-dark">Crear Nuevo<i class="fas fa-plus"> </i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IdPago)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaPago)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Importe)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.IdPago" title="Editar"><i class="fas fa-edit"></i></a>&nbsp;
        <a asp-action="Delete" asp-route-id="@item.IdPago" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
    </td>
</tr>}
    </tbody>
</table>
